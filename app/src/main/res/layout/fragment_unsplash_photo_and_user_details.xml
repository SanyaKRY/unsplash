<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".features.unsplashphotoanduserdetails.presenter.ui.UnsplashPhotoAndUserDetailsFragment">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/unsplash_photo_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/unsplash_photo_id"
        android:textSize="25sp"
        android:paddingTop="10dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/unsplash_photo_likes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/unsplash_photo_likes"
        android:textSize="25sp"
        android:paddingTop="10dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/unsplash_photo_id" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/user_username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/user_username"
        android:textSize="25sp"
        android:paddingTop="10dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/unsplash_photo_likes" />


    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/user_links_html"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/user_links_html"
        android:textSize="25sp"
        android:paddingTop="10dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/user_username" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/unsplash_photo_image_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/user_links_html"
        tools:srcCompat="@drawable/ic_image" />

</androidx.constraintlayout.widget.ConstraintLayout>